<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<requires lib="gtk" version="4.0" />
	<requires lib="Adw" version="1.0" />
	<template class="EuphoniaPreferences" parent="AdwPreferencesDialog">
		<property name="content-width">800</property>
		<property name="content-height">600</property>
		<property name="title" translatable="true">Preferences</property>
		<child>
			<object class="AdwPreferencesPage" id="connection_page">
				<property name="title" translatable="true">Connection</property>
				<property name="icon-name">server-pick-symbolic</property>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title" translatable="true">Music Player Daemon</property>
						<property name="description" translatable="true">Change how Euphonia connects to your Music Player Daemon instance. Click Apply to save these settings and initiate a new connection.</property>
						<property name="header-suffix">
							<object class="GtkButton" id="reconnect">
								<property name="label" translatable="true">Apply</property>
								<property name="valign">2</property>
								<property name="margin-start">12</property>
								<style>
									<class name="suggested-action"/>
								</style>
							</object>
						</property>
						<child>
							<object class="AdwEntryRow" id="mpd_host">
								<property name="title" translatable="true">Host address</property>
							</object>
						</child>
						<child>
							<object class="AdwEntryRow" id="mpd_port">
								<property name="title" translatable="true">Port</property>
							</object>
						</child>
						<child>
							<object class="AdwSwitchRow" id="mpd_download_album_art">
								<property name="title" translatable="true">Download album art</property>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title" translatable="true">Last.fm</property>
						<property name="description" translatable="true">You can optionally connect to Last.fm to fetch additional information, such as album descriptions, artist bios, etc.</property>
						<child>
							<object class="AdwSwitchRow" id="use_lastfm">
								<property name="title" translatable="true">Use Last.fm</property>
							</object>
						</child>
						<child>
							<object class="AdwEntryRow" id="lastfm_key">
								<property name="title" translatable="true">API key</property>
								<property name="sensitive">false</property>
							</object>
						</child>
						<child>
							<object class="AdwEntryRow" id="lastfm_user_agent">
								<property name="title" translatable="true">User agent string</property>
								<property name="sensitive">false</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="AdwPreferencesPage" id="library_page">
				<property name="title" translatable="true">Library</property>
				<property name="icon-name">library-music-symbolic</property>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title" translatable="true">Searching and Sorting</property>
						<child>
							<object class="AdwSwitchRow" id="sort_nulls_first">
								<property name="title" translatable="true">Sort nulls first</property>
								<property name="subtitle" translatable="true">Where to place untagged entries when sorting by that tag. For example, sorting albums by AlbumArtist with this setting on will place albums without AlbumArtist specified at the beginning of the list.</property>
							</object>
						</child>
						<child>
							<object class="AdwSwitchRow" id="sort_case_sensitive">
								<property name="title" translatable="true">Case-sensitive sorting</property>
								<property name="subtitle" translatable="true">When enabled, uppercase letters will be sorted before lowercase ones. This only affects bicameral scripts, i.e., names in Chinese or Japanese are not affected.</property>
							</object>
						</child>
						<child>
							<object class="AdwSwitchRow" id="search_case_sensitive">
								<property name="title" translatable="true">Case-sensitive searching</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="AdwPreferencesPage" id="player_page">
				<property name="title" translatable="true">Player</property>
				<property name="icon-name">play-symbolic</property>
				<child>
					<object class="AdwPreferencesGroup">
						<property name="title" translatable="true">Player Bar</property>
						<property name="description" translatable="true">The always-visible controls at the bottom.</property>
						<child>
							<object class="AdwSwitchRow" id="use_album_art_as_bg">
								<property name="title" translatable="true">Use album art as background</property>
							</object>
						</child>
						<child>
							<object class="AdwSpinRow" id="bg_blur_radius">
								<property name="title" translatable="true">Background blur radius (pixels)</property>
								<property name="subtitle" translatable="true">Higher values may affect performance. Set to 0 to disable blur.</property>
								<property name="adjustment">
									<object class="GtkAdjustment">
										<property name="lower">0</property>
										<property name="upper">100</property>
										<property name="value">24</property>
										<property name="page-increment">10</property>
										<property name="step-increment">1</property>
									</object>
								</property>
							</object>
						</child>
						<child>
							<object class="AdwSpinRow" id="bg_opacity">
								<property name="title" translatable="true">Background opacity</property>
								<property name="subtitle" translatable="true">Lower values allow the album art to "dim" or "brighten" depending on whether the app is in light or dark mode by blending itself with the default window background.</property>
								<property name="digits">2</property>
								<property name="adjustment">
									<object class="GtkAdjustment">
										<property name="lower">0.01</property>
										<property name="upper">1.00</property>
										<property name="value">0.50</property>
										<property name="page-increment">0.1</property>
										<property name="step-increment">0.02</property>
									</object>
								</property>
							</object>
						</child>
						<child>
							<object class="AdwSpinRow" id="bg_transition_duration">
								<property name="title" translatable="true">Transition duration (seconds)</property>
								<property name="digits">2</property>
								<property name="adjustment">
									<object class="GtkAdjustment">
										<property name="lower">0.0</property>
										<property name="upper">10.0</property>
										<property name="value">1.0</property>
										<property name="page-increment">1.0</property>
										<property name="step-increment">0.25</property>
									</object>
								</property>
							</object>
						</child>
					</object>
				</child>
			</object>
		</child>
	</template>
</interface>
