<?xml version="1.0" encoding="UTF-8"?>
<interface>
	<template class="SlamprustQueueRow" parent="GtkBox">
		<child>
			<object class="GtkBox">
				<property name="overflow">hidden</property>
				<style>
					<class name="thumbnail-box" />
				</style>
				<child>
					<object class="GtkImage" id="thumbnail">
						<property name="icon-size">2</property>
						<property name="resource">/org/slamprust/Slamprust/albumart-placeholder.png</property>
					</object>
				</child>
			</object>
		</child>
		<child>
			<object class="GtkBox">
				<property name="orientation">vertical</property>
				<property name="spacing">6</property>
				<property name="margin-start">12</property>
				<child>
					<object class="GtkBox">
						<child>
							<object class="GtkLabel" id="playing_indicator">
								<property name="label">⏵︎</property>
								<property name="visible">false</property>
								<property name="margin-end">4</property>
							</object>
						</child>
						<child>
							<object class="GtkLabel" id="song_name">
								<property name="halign">start</property>
								<style>
									<class name="heading" />
								</style>
							</object>
						</child>
					</object>
				</child>
				<child>
					<object class="GtkBox">

						<child>
							<object class="GtkImage">
								<property name="icon-name">music-artist-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkLabel" id="artist_name">
								<property name="margin-start">4</property>
								<property name="label">Unknown</property>
							</object>
						</child>

						<child>
							<object class="GtkSeparator">
								<style>
									<class name="spacer" />
								</style>
							</object>
						</child>

						<child>
							<object class="GtkImage">
								<property name="icon-name">library-music-symbolic</property>
							</object>
						</child>
						<child>
							<object class="GtkLabel" id="album_name">
								<property name="margin-start">4</property>
								<property name="label">Unknown</property>
							</object>
						</child>

						<style>
							<class name="dim-label" />
							<class name="caption" />
						</style>
					</object>
				</child>
			</object>
		</child>
		<style>
			<class name="card" />
			<class name="queue-row" />
		</style>
	</template>
</interface>