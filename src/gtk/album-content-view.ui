<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <template class="EuphoniaAlbumContentView" parent="GtkWidget">
        <child>
            <object class="AdwToolbarView">
                <child type="top">
					<object class="AdwHeaderBar">
						<property name="title-widget">
							<object class="AdwWindowTitle">
								<property name="title" translatable="true">Album Info</property>
							</object>
						</property>
                        <child>
                            <object class="GtkButton" id="replace_queue">
                                <property name="icon-name">play-symbolic</property>
                                <style>
                                    <class name="suggested-action"/>
                                </style>
                            </object>
                        </child>
					</object>
				</child>
				<property name="content">
                    <object class="GtkBox">
                        <property name="orientation">1</property>
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <child>
                            <object class="GtkBox">
                                <child>
                                    <object class="GtkBox">
				                        <property name="halign">3</property>
				                        <property name="valign">3</property>
				                        <property name="overflow">hidden</property>
				                        <style>
					                        <class name="thumbnail-box" />
				                        </style>
				                        <child>
					                        <object class="GtkImage" id="cover">
						                        <property name="pixel-size">128</property>
						                        <property name="resource">/org/euphonia/Euphonia/albumart-placeholder.png</property>
					                        </object>
				                        </child>
			                        </object>
                                </child>
                                <child>
                                    <object class="GtkBox">
                                        <property name="orientation">1</property>
                                        <child>
                                            <object class="GtkLabel" id="title">
                                                <property name="label">Untitled Album</property>
                                                <style>
                                                    <class name="title-2"/>
                                                </style>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel" id="artist">
                                                <property name="label">Unknown Artist</property>
                                            </object>
                                        </child>
                                        <child>
                                            <object class="GtkLabel" id="release_date">
                                                <property name="label">Unknown Release Date</property>
                                            </object>
                                        </child>
                                    </object>
                                </child>
                            </object>
                        </child>
                        <child>
                            <object class="GtkScrolledWindow">
                                <property name="hscrollbar-policy">never</property>
                                <property name="vscrollbar-policy">automatic</property>
                                <property name="propagate-natural-height">true</property>
                                <property name="has-frame">false</property>
                                <property name="vexpand">true</property>
                                <property name="child">
                                    <object class="GtkListView" id="content">
                                    </object>
                                </property>
                            </object>
                        </child>
                    </object>
				</property>
			</object>
		</child>
	</template>
</interface>
