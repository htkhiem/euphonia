<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="EuphoniaPlaybackControls" parent="GtkBox">
    <child>
      <object class="GtkStack" id="stack">
        <child>
          <object class="GtkStackPage">
            <property name="name">stopped</property>
            <property name="child">
              <object class="GtkLabel">
                <property name="label" translatable="true">Stopped</property>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">playing</property>
            <property name="child">
              <object class="GtkBox">
                <property name="hexpand">true</property>
                <property name="orientation">1</property>
                <child>
                  <!-- Above: buttons -->
                  <object class="GtkBox">
                    <property name="halign">3</property>
                    <child>
                      <object class="GtkButton" id="flow_btn">
                        <property name="icon-name">playlist-consecutive-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="prev_btn">
                        <property name="icon-name">skip-backward-large-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="play_pause_btn">
                        <child>
                          <object class="GtkStack" id="play_pause_symbol">
                            <property name="transition-type">rotate-left-right</property>
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">play</property>
                                <property name="child">
                                  <object class="GtkImage">
                                    <property name="icon-name">pause-large-symbolic</property>
                                    <property name="icon_size">1</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                  </object>
                                </property>
                              </object>
                            </child>
                            <child>
                              <object class="GtkStackPage">
                                <property name="name">pause</property>
                                <property name="child">
                                  <object class="GtkImage">
                                    <property name="icon-name">play-large-symbolic</property>
                                    <property name="icon_size">1</property>
                                    <style>
                                      <class name="flat"/>
                                    </style>
                                  </object>
                                </property>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkButton" id="next_btn">
                        <property name="icon-name">skip-forward-large-symbolic</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkToggleButton" id="random_btn">
                        <property name="icon-name">media-playlist-shuffle-symbolic</property>
                        <property name="tooltip-text" translatable="true">Shuffle Queue</property>
                        <style>
                          <class name="flat"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <!-- Bottom: seekbar -->
                  <object class="EuphoniaSeekbar" id="seekbar"/>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
