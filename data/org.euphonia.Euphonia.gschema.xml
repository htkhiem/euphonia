<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="euphonia">

	<schema id="org.euphonia.Euphonia" path="/org/euphonia/Euphonia/">
		<child schema="org.euphonia.Euphonia.state" name="state"/>
		<child schema="org.euphonia.Euphonia.client" name="client"/>
	</schema>

	<schema id="org.euphonia.Euphonia.client" path="/org/euphonia/Euphonia/client/">
		<!-- TODO: bool key for whether there's a password. Store password with oo7. -->
		<key name="mpd-host" type="s">
			<default>'localhost'</default>
		</key>
		<key name="mpd-port" type="i">
			<default>6600</default>
		</key>

	</schema>

	<schema id="org.euphonia.Euphonia.state" path="/org/euphonia/Euphonia/state/">
		<!-- Remember last window size -->
		<key name="last-window-width" type="i">
			<default>600</default>
		</key>
		<key name="last-window-height" type="i">
			<default>400</default>
		</key>

	</schema>
</schemalist>
