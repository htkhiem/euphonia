<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="euphonia">
	<enum id="org.euphonia.Euphonia.sortby">
		<value nick="song-title" value="1"/>
		<value nick="artist" value="2"/>
		<value nick="album-title" value="3"/>
		<value nick="album-artist" value="4"/>
		<value nick="release-date" value="5"/>
	</enum>

	<enum id="org.euphonia.Euphonia.sortdir">
		<value nick="asc" value="1"/>
		<value nick="desc" value="0"/>  <!-- Works as boolean too -->
	</enum>

	<schema id="org.euphonia.Euphonia" path="/org/euphonia/Euphonia/">
		<child schema="org.euphonia.Euphonia.state" name="state"/>
		<child schema="org.euphonia.Euphonia.library" name="library"/>
		<child schema="org.euphonia.Euphonia.client" name="client"/>
		<child schema="org.euphonia.Euphonia.appearance" name="appearance"/>
	</schema>

	<schema id="org.euphonia.Euphonia.client" path="/org/euphonia/Euphonia/client/">
		<!-- TODO: bool key for whether there's a password. Store password with oo7. -->
		<key name="mpd-host" type="s">
			<default>'localhost'</default>
		</key>
		<key name="mpd-port" type="u">
			<default>6600</default>
		</key>
		<key name="mpd-ping-interval-s" type="u">
			<summary>Ping interval for main client</summary>
			<description>
			Euphonia relies on a secondary background client that's always in "idle mode" to
			synchronise itself with changes made by other frontend apps. Its main client does not
			poll the daemon unless needed (e.g. to update the seekbar). Due to this, it still
			needs to occasionally ping the daemon to keep the connection alive. Set this to
			lower than your daemon's timeout interval, which by default is 30s.
			</description>
			<default>15</default>
		</key>

		<key name="use-lastfm" type="b">
			<default>false</default>
		</key>
		<key name="lastfm-api-key" type="s">
			<default>''</default>
		</key>
		<key name="lastfm-username" type="s">
			<default>'Euphonia'</default>
		</key>
	</schema>

	<schema id="org.euphonia.Euphonia.library" path="/org/euphonia/Euphonia/library/">
		<key name="sort-nulls-first" type="b">
			<default>false</default>
		</key>
		<key name="search-case-sensitive" type="b">
			<default>false</default>
		</key>
		<key name="sort-case-sensitive" type="b">
			<default>false</default>
		</key>
	</schema>

	<schema id="org.euphonia.Euphonia.appearance" path="/org/euphonia/Euphonia/appearance/">
	</schema>

	<schema id="org.euphonia.Euphonia.state" path="/org/euphonia/Euphonia/state/">
		<child schema="org.euphonia.Euphonia.state.albumview" name="albumview"/>

		<!-- Remember last window size -->
		<key name="last-window-width" type="i">
			<default>600</default>
		</key>
		<key name="last-window-height" type="i">
			<default>400</default>
		</key>
	</schema>

	<schema id="org.euphonia.Euphonia.state.albumview" path="/org/euphonia/Euphonia/state/albumview/">
		<!-- Album view state -->
		<key name='sort-by' enum='org.euphonia.Euphonia.sortby'>
			<default>'album-title'</default>
			<summary>Album View sort criterion</summary>
		</key>

		<key name="sort-direction" enum='org.euphonia.Euphonia.sortdir'>
			<default>'asc'</default>
			<summary>Album View sort direction</summary>
		</key>
	</schema>
</schemalist>
